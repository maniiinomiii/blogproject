<html lang="en">
<%- include("./partials/head.ejs") %>

<body  " >
  <%- include("./partials/nav.ejs") %>

  <div class="blogs content">
    <h2>All Blogs</h2>

    <% if (blogs.length > 0) { %>

      

      <% blogs.forEach(blog => { %>

        <div class="card  mt-4 ">

          <div class="mr-2">
        
          <h3 class="card-tiltle"><%= blog.title %></h3>
          
          <p class="card-text "><%= blog.body %></p>
         
        </div>

       <a href="/blogs/<%= blog._id %>"><button class="btn btn-success" >Show Details</button></a>


      </div>

      <% }) %>
    <% } else { %>
      <p>There are no blogs to display...</p>
    <% } %>

  
    
  </div>


  <%- include("./partials/footer.ejs") %>
</body>
</html>